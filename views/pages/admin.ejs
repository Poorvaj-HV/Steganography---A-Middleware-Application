<% layout('layouts/boilerplate') -%>

<body class="bg-light">
    <custom-navbar></custom-navbar>
    
    <main class="container py-5">
        <!-- Login Form -->
        <div id="login-form" class="card shadow-sm mx-auto" style="max-width: 400px;">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-shield-lock fs-3 text-primary"></i>
                    </div>
                    <h1 class="h3 mb-2">Admin Login</h1>
                    <p class="text-muted">Enter your credentials to access the admin dashboard</p>
                </div>
                
                <form method="POST" action="/admin/login" class="needs-validation">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Enter admin username" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required>
                            <button class="btn btn-outline-secondary" type="button" id="toggle-admin-password">
                                <i class="bi bi-eye-slash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Dashboard -->
        <div id="dashboard" class="d-none">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-shield me-2"></i>Admin Dashboard
                </h1>
                <form method="POST" action="/admin/logout" class="d-inline">
                    <button type="submit" class="btn btn-light">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </div>
            
            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p class="text-muted mb-1">Total Encodes</p>
                                    <h3 class="mb-0">1,248</h3>
                                </div>
                                <div class="bg-primary bg-opacity-10 p-3 rounded">
                                    <i class="bi bi-lock fs-4 text-primary"></i>
                                </div>
                            </div>
                            <p class="text-success mt-2 mb-0">
                                <i class="bi bi-arrow-up"></i> 12% from last month
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Similar cards for Decodes, Users, and Storage -->
                <!-- ...existing stats cards... -->
            </div>
            
            <!-- Recent Activity -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Activity</h5>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex gap-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-lock fs-5 text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between">
                                    <h6 class="mb-1">Image Encoded</h6>
                                    <small class="text-muted">2 min ago</small>
                                </div>
                                <p class="text-muted small mb-0">User encoded a 1.2MB image with 128 characters</p>
                            </div>
                        </div>
                    </div>
                    <!-- More activity items -->
                    <!-- ...existing activity items... -->
                </div>
            </div>
            
            <!-- Charts -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">User Statistics</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="user-chart" height="250"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Encode/Decode Ratio</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="ratio-chart" height="250"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <custom-footer></custom-footer>
    
    <script src="components/navbar.js"></script>
    <script src="components/footer.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
